{
    "name": "balsama/engage-demo",
    "description": "Build for Acquia Engage demo.",
    "type": "project",
    "license": "GPL-2.0-or-later",
    "repositories": {
        "drupal": {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        },
        "assets": {
            "type": "composer",
            "url": "https://asset-packagist.org"
        }
    },
    "require": {
        "composer/installers": "^1.2",
        "cweagans/composer-patches": "^1.6",
        "drupal-composer/drupal-scaffold": "^2.5",
        "drupal/core": "8.8.x-dev",
        "drupal/jsonapi_explorer": "^1.0",
        "drupal/jsonapi_extras": "^3.12",
        "drush/drush": "<9.6.0",
        "vlucas/phpdotenv": "^2.4",
        "webflo/drupal-finder": "^1.0.0",
        "webmozart/path-util": "^2.3"
    },
    "require-dev": {},
    "conflict": {
        "drupal/drupal": "*"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "sort-packages": true,
        "process-timeout": 0,
        "preferred-install": {
            "drupal/core": "dist"
        }
    },
    "autoload": {
        "classmap": [
            "scripts/composer/ScriptHandler.php"
        ],
        "files": ["load.environment.php"]
    },
    "scripts": {
        "pre-install-cmd": [
            "DrupalProject\\composer\\ScriptHandler::checkComposerVersion"
        ],
        "pre-update-cmd": [
            "DrupalProject\\composer\\ScriptHandler::checkComposerVersion"
        ],
        "post-install-cmd": [
            "DrupalProject\\composer\\ScriptHandler::createRequiredFiles"
        ],
        "post-update-cmd": [
            "DrupalProject\\composer\\ScriptHandler::createRequiredFiles"
        ],
        "setup": [
            "@composer copy-dev-settings",
            "drush site:install --existing-config --yes",
            "@composer refresh-content"
        ],
        "refresh-content": [
            "drush pm:uninstall jsonapi_demo_content && drush pm:enable jsonapi_demo_content"
        ],
        "copy-dev-settings": [
            "chmod -R +w docroot/sites/default",
            "cp docroot/sites/default/default.settings.dev.php docroot/sites/default/settings.dev.php"
        ],
        "run-server": [
            "cd docroot && php core/scripts/drupal server --no-interaction"
        ],
        "quick-start": [
            "@composer install",
            "@composer setup",
            "@composer run-server"
        ]
    },
    "extra": {
        "installer-types": [
            "bower-asset",
            "npm-asset"
        ],
        "installer-paths": {
            "docroot/core": ["type:drupal-core"],
            "docroot/modules/contrib/{$name}": ["type:drupal-module"],
            "docroot/profiles/contrib/{$name}": ["type:drupal-profile"],
            "docroot/themes/contrib/{$name}": ["type:drupal-theme"],
            "docroot/libraries/{$name}": [
                "type:drupal-library",
                "type:bower-asset",
                "type:npm-asset"
            ],
            "drush/Commands/{$name}": ["type:drupal-drush"]
        },
        "drupal-scaffold": {
            "initial": {
                ".editorconfig": "../.editorconfig",
                ".gitattributes": "../.gitattributes"
            }
        },
        "enable-patching": true,
        "patchLevel": {
            "drupal/core": "-p2"
        },
        "patches": {
            "drupal/config_installer": {},
            "drupal/core": {
                "Don't run Standard's install hook if the site is being installed from config.":
                "patches/standard-hook_install-remove.patch"
            }
        }
    }
}
